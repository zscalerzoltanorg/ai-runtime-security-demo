# --- Minimal local defaults (works out of the box for Ollama + bundled MCP) ---
PORT=5000
APP_DEMO_NAME='AI Runtime Security Demo'
MAX_REQUEST_BYTES=1000000

# Local Ollama runtime
OLLAMA_URL=http://127.0.0.1:11434
OLLAMA_MODEL=llama3.2:1b

# Bundled local MCP server is auto-used when MCP_SERVER_COMMAND is empty
MCP_SERVER_COMMAND=
MCP_TIMEOUT_SECONDS=15
MCP_PROTOCOL_VERSION=2024-11-05
LOCAL_TASKS_BASE_DIR=demo_local_workspace
LOCAL_TASKS_MAX_ENTRIES=200
LOCAL_TASKS_MAX_BYTES=500000
TOOLSET_DEBUG_LOGS=false
INCLUDE_TOOLS_IN_LLM_REQUEST=false
MAX_TOOLS_IN_REQUEST=20
TOOL_INCLUDE_MODE=all
TOOL_ALLOWLIST=
TOOL_PROGRESSIVE_COUNT=5
TOOL_NAME_PREFIX_STRATEGY=serverPrefix

# Safe defaults for local agent/tool loops
AGENTIC_MAX_STEPS=3
MULTI_AGENT_MAX_SPECIALIST_ROUNDS=1
BRAVE_SEARCH_MAX_RESULTS=5
ALLOW_PRIVATE_TOOL_NETWORK=

# --- Optional provider/API settings (leave blank until you need them) ---
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
PERPLEXITY_API_KEY=
XAI_API_KEY=
GEMINI_API_KEY=
VERTEX_PROJECT_ID=
AZURE_AI_FOUNDRY_API_KEY=
AZURE_AI_FOUNDRY_BASE_URL=
LITELLM_API_KEY=
LITELLM_BASE_URL=
AWS_REGION=us-east-1
BEDROCK_AGENT_ID=
BEDROCK_AGENT_ALIAS_ID=

# Optional model overrides (normally set in UI settings when needed)
ANTHROPIC_MODEL=claude-3-haiku-20240307
OPENAI_MODEL=gpt-4o-mini
PERPLEXITY_MODEL=sonar
XAI_MODEL=grok-2-latest
GEMINI_MODEL=gemini-1.5-flash
VERTEX_MODEL=gemini-1.5-flash
VERTEX_LOCATION=us-central1
LITELLM_MODEL=claude-3-haiku-20240307
BEDROCK_INVOKE_MODEL=amazon.nova-lite-v1:0
AZURE_AI_FOUNDRY_MODEL=gpt-4o-mini

# Zscaler AI Guard DAS/API
ZS_GUARDRAILS_API_KEY=
ZS_GUARDRAILS_URL=https://api.zseclipse.net/v1/detection/resolve-and-execute-policy
ZS_GUARDRAILS_TIMEOUT_SECONDS=15
ZS_GUARDRAILS_CONVERSATION_ID_HEADER_NAME=conversationIdHeaderName

# Zscaler AI Guard Proxy mode
ZS_PROXY_BASE_URL=https://proxy.zseclipse.net
ZS_PROXY_API_KEY_HEADER_NAME=X-ApiKey
ZS_PROXY_API_KEY=
ANTHROPIC_ZS_PROXY_API_KEY=
OPENAI_ZS_PROXY_API_KEY=
LITELLM_ZS_PROXY_API_KEY=
BEDROCK_INVOKE_ZS_PROXY_API_KEY=
BEDROCK_AGENT_ZS_PROXY_API_KEY=
PERPLEXITY_ZS_PROXY_API_KEY=
XAI_ZS_PROXY_API_KEY=
GEMINI_ZS_PROXY_API_KEY=
VERTEX_ZS_PROXY_API_KEY=
AZURE_FOUNDRY_ZS_PROXY_API_KEY=

# Optional corp TLS override (only if your local network requires it)
SSL_CERT_FILE=certs/combined-ca-bundle.pem
REQUESTS_CA_BUNDLE=certs/combined-ca-bundle.pem
